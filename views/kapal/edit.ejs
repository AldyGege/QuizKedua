<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>EXPRESS</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container mt-5">
    <h2 class="mb-4">Edit Kapal</h2>
    <form action="/kapal/update/<%= id %>" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="nama" class="form-label">Foto Kapal</label>
            <input type="file" class="form-control" name="foto_kapal" required>
        </div>   
        <div class="mb-3">
            <label for="nama" class="form-label">Nama kapal</label>
            <input type="text" class="form-control" name="nama_kapal" value="<%= nama_kapal %>" required>
        </div>   
        <div class="mb-3">
            <label for="nama" class="form-label">Nama Alat Tangkap</label>
            <select class="form-select" aria-label="Pilih Alat Tangkap" name="id_alat_tangkap" required>
                <option selected>Pilih Alat Tangkap</option>
                <% for(var i=0; i < data1.length; i++){ %>
                    <option value="<%= data1[i].id_alat_tangkap %>"><%= data1[i].nama_alat_tangkap %></option>
                <% } %>
            </select>
        </div>
        <div class="mb-3">
            <label for="nama" class="form-label">Nama DPI</label>
            <select class="form-select" aria-label="Pilih DPI " name="id_dpi" required>
                <option selected>Pilih DPI</option>
                <% for(var i=0; i < data2.length; i++){ %>
                    <option value="<%= data2[i].id_dpi %>"><%= data2[i].nama_dpi %></option>
                <% } %>
            </select>
        </div>
        <div class="mb-3">
            <label for="nama" class="form-label">Nama Pemilik</label>
            <select class="form-select" aria-label="Pilih Pemilik" name="id_pemilik" required>
                <option selected>Pilih Nama Pemilik</option>
                <% for(var i=0; i < data3.length; i++){ %>
                    <option value="<%= data3[i].id_pemilik %>"><%= data3[i].nama_pemilik %></option>
                <% } %>
            </select>
        </div>
        <div class="mb-3">
        <button type="submit" class="btn btn-sm btn-success">Simpan</button>
        </div>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
